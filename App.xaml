<Application x:Class="CardInput.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:m3="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <m3:BundledTheme BaseTheme="Inherit" PrimaryColor="DeepPurple" SecondaryColor="Orange" />
                <ResourceDictionary
                    Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

                <!-- Other merged dictionaries here -->
                <ResourceDictionary Source="Resources/Icons.xaml" />
                <ResourceDictionary Source="Styles/Other.xaml" />
                <ResourceDictionary Source="Styles/Button.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Thickness x:Key="ControlPageContentMargin">24,20,24,20</Thickness>
            <system:Double x:Key="RoundIconSize">20</system:Double>
            <system:Double x:Key="RoundButtonSize">42</system:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>